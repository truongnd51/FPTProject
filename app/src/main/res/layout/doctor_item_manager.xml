<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="17dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue">
        <ImageView
            android:id="@+id/image_doctor1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/doctor"/>
        <TextView
            android:id="@+id/title_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bác sĩ: "
            android:textSize="23dp"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/title_password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/title_email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ email: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinh nghiệm: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>