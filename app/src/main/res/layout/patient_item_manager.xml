<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="17dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue">
        <TextView
            android:id="@+id/title_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người khám: "
            android:textSize="23dp"
            android:textStyle="bold"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/title_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/title_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ email: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/title_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="16dp"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"/>
        <Button
            android:id="@+id/bt_delete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>