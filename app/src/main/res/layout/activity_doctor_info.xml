<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.DoctorInfoActivity">
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/button"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/back_button_calen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:paddingTop="9dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂT LỊCH KHÁM"
            android:textStyle="bold"
            android:textSize="27dp"
            android:paddingLeft="74dp"
            android:paddingTop="3dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_doctor"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/doctor"
        app:layout_constraintTop_toBottomOf="@+id/layout_top"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_name"
        android:paddingTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/image_doctor"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bác sĩ: "
        android:textSize="23dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_doctor"
        app:layout_constraintStart_toEndOf="@+id/logo_name"/>

    <TextView
        android:id="@+id/title_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin liên lạc"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_name"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_email"
        android:paddingTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/title_contact"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ email: "
        android:textSize="16dp"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_contact"
        app:layout_constraintStart_toEndOf="@+id/logo_email"/>

    <ImageView
        android:id="@+id/logo_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_phone"
        android:paddingTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/title_email"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tittle_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textSize="16dp"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_email"
        app:layout_constraintStart_toEndOf="@id/logo_phone"/>

    <TextView
        android:id="@+id/title_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tittle_phone"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_description"
        android:paddingTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/title_des"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kinh nghiệm: "
        android:textSize="16dp"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_des"
        app:layout_constraintStart_toEndOf="@+id/logo_des"/>

    <ImageView
        android:id="@+id/logo_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_description"
        android:paddingTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/des"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá: "
        android:textSize="16dp"
        android:paddingTop="17dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/des"
        app:layout_constraintStart_toEndOf="@+id/logo_price"/>


</androidx.constraintlayout.widget.ConstraintLayout>